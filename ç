#include "ft_printf.h"

int	ft_puthex(long long n, int up)
{
	static int	r;
	char		*basestr;

	r = 0;
	basestr = "0123456789abcdef";
	if (up)
		basestr = "0123456789abcdef";
	if (n < 0)
	{
		ft_putchar('-');
		return (ft_puthex(-n, up) + 1);
	}
	else if (n < base)
		r += ft_putchar(basestr[n % 16]);
	else
	{
		ft_puthex(n / 16, up);
		r += ft_putchar(basestr[n % 16]);
	}
	return (r);
}

static int	ft_puthexaddr(unsigned long long n)
{
	static int	r;
	char		*basestr;

	r = 0;
	basestr = "0123456789abcdef";
	if (n < 16)
		r += ft_putchar(basestr[n % 16]);
	else
	{
		ft_puthexaddr(n / 16);
		r += ft_putchar(basestr[n % 16]);
	}
	return (r);
}
